<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/chocolatefudgecake"
            android:layout_width="223dp"
            android:layout_height="205dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/chocolatefudgecake" />
        <TextView
            android:id="@+id/chocolatefudgecake_txt"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:background="#B99E9E"
            android:text="Chocolate Fudge Cake"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/icedcaramellatte"
            android:layout_width="209dp"
            android:layout_height="200dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/icedcaramellatte" />
        <TextView
            android:id="@+id/icedcaramellatte_txt"
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:layout_marginTop="-30dp"
            android:background="#B99E9E"
            android:text="Iced Caramel Latte"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/hotchocolate"
            android:layout_width="218dp"
            android:layout_height="212dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/hotchocolate" />
        <TextView
            android:id="@+id/hotchocolate_txt"
            android:layout_width="213dp"
            android:layout_height="54dp"
            android:background="#B99E9E"
            android:text="Hot Chocolate"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/chocolatetart"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/chocolatetart" />
        <TextView
            android:id="@+id/applecrisp_txt"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:background="#B99E9E"
            android:text="Apple Crisp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />
        <ImageView
            android:id="@+id/applecrisp"
            android:layout_width="221dp"
            android:layout_height="267dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/applecrisp" />
        <TextView
            android:id="@+id/chocolatetart_txt"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:background="#B99E9E"
            android:text="Chocolate Tart"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/pastries"
            android:layout_width="185dp"
            android:layout_height="247dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/pastries" />
        <TextView
            android:id="@+id/pastries_txt"
            android:layout_width="213dp"
            android:layout_height="42dp"
            android:background="#B99E9E"
            android:text="Pastries"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>